.message
  .upper-info
    .upper-info__talker
      = message.user.name
    .upper-info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .text
    - if message.content.present?
      %p.text__content
        = message.content
    = image_tag message.image.url, class: 'text-content__image' if message.image.present?